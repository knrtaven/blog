<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
      <% @article.comments.each do |comment| %>
        <tr>
          <td><%= comment.id %></td>
          <td><%= comment.body%></td>
          <td><%= link_to 'Edit', edit_article_comment_path(@article, comment)%></td>
        </tr>
      <% end %>
    </tbody>
</table>

<%= link_to 'Add Comment', new_article_comment_path(@article) %>
